<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:minWidth="320dp"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".fragments.NewExerciseFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txtNewEditExercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/new_exercise"
        android:textColor="@color/textColor"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:padding="8dp"
        android:text="Grupos Muscular"
        android:textColor="@color/textColor"
        android:textSize="14sp"
        android:textStyle="italic" />

    <Spinner
        android:id="@+id/spinnerMuscles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="8dp"
        android:spinnerMode="dialog" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="8dp"
        android:text="Nombre del Ejercicio"
        android:textColor="@color/textColor" />

    <EditText
        android:id="@+id/edittextEjercicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textCapWords"
        android:padding="8dp"
        android:textColor="@color/textColorDark"
        android:textColorHint="@color/textColorDark"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnSaveExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/ic_save"
        android:drawablePadding="3dp"
        android:text="@string/save"
        android:theme="@style/AppTheme.Button" />

</LinearLayout>