<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/colorBackDark"
    app:cardBackgroundColor="@color/colorBackDark"
    app:cardCornerRadius="6dp"
    app:cardElevation="3dp"
    app:contentPadding="20dp"
    tools:context=".fragments.MuscleGroupsListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="Grupos Musculares"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/newMuscleGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:drawableStart="@drawable/mancuerna"
            android:drawableLeft="@drawable/mancuerna"
            android:drawablePadding="3dp"
            android:text="@string/add_new"
            android:theme="@style/AppTheme.Button" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorBackground"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingRight="10dp"
            android:paddingBottom="3dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/musclesList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackDark">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</androidx.cardview.widget.CardView>